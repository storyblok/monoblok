{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultProject": "main",
  "parallel": 5,
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:types": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    }
  },
  "tui": {
    "enabled": false
  },
  "release": {
    "projectsRelationship": "independent",
    "projects": ["packages/*"],
    "version": {
      "conventionalCommits": true,
      "fallbackCurrentVersionResolver": "disk",
      "versionActionsOptions": {
        "skipLockFileUpdate": true
      }
    },
    "changelog": {
      "automaticFromRef": false,
      "projectChangelogs": {
        "createRelease": "github",
        "file": false
      }
    }
  }
}
