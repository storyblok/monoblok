---
import { renderRichText, storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
const renderedRichText = blok.text ? renderRichText(blok.text) : null;
---

<div {...storyblokEditable(blok)} data-test="richtext-renderer-component">
  <div set:html={renderedRichText} />
</div>
