---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)}>
  <h2 class="heading">{blok.name}</h2>
</div>

<style>
  .heading {
    text-align: center;
    color: var(--color-secondary);
    font-size: 1.25rem; /* text-xl */
    line-height: 1.75rem;
    font-weight: 700; /* bold */
  }
</style>
