{
  "name": "@storyblok/svelte",
  "type": "module",
  "version": "5.0.3",
  "private": false,
  "packageManager": "pnpm@9.15.9",
  "description": "SDK to integrate Storyblok into your project using Svelte.",
  "author": "Storyblok",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storyblok/storyblok-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/storyblok/storyblok-svelte/issues"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "!dist/**/*.spec.*",
    "!dist/**/*.test.*",
    "dist"
  ],
  "svelte": "./dist/index.js",
  "scripts": {
    "dev": "vite dev",
    "build": "pnpm package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "test": "pnpm run test:unit:ci && pnpm run test:e2e",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run",
    "test:unit:ui": "vitest --ui",
    "playground": "pnpm run --filter ./playground/sveltekit dev",
    "test:e2e": "START_SERVER_AND_TEST_INSECURE=1 start-server-and-test playground https://localhost:5173/ cy:run",
    "test:e2e-watch": "START_SERVER_AND_TEST_INSECURE=1 start-server-and-test playground https://localhost:5173/ cy:open",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "@storyblok/js": "workspace:*"
  },
  "devDependencies": {
    "@cypress/svelte": "^3.0.0",
    "@eslint/compat": "^1.2.7",
    "@rollup/plugin-typescript": "^12.1.2",
    "@storyblok/eslint-config": "^0.3.0",
    "@sveltejs/adapter-auto": "^5.0.0",
    "@sveltejs/kit": "^2.20.2",
    "@sveltejs/package": "^2.3.10",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "cypress": "^14.3.3",
    "eslint": "^9.26.0",
    "eslint-plugin-svelte": "^3.3.3",
    "jsdom": "^26.0.0",
    "pathe": "^2.0.3",
    "publint": "^0.3.9",
    "start-server-and-test": "^2.0.11",
    "svelte": "^5.25.3",
    "svelte-check": "^4.1.5",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.28.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.3"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "implicitDependencies": [
      "!@storyblok/playground-*"
    ]
  }
}
