{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "@storyblok/angular": {
      "projectType": "library",
      "root": "projects/storyblok-angular-sdk",
      "sourceRoot": "projects/storyblok-angular-sdk/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/storyblok-angular-sdk/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/storyblok-angular-sdk/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/storyblok-angular-sdk/tsconfig.spec.json"
          }
        }
      }
    },
    "ssr-playground": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/ssr-playground",
      "sourceRoot": "projects/ssr-playground/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/ssr-playground/src/main.ts",
            "tsConfig": "projects/ssr-playground/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/ssr-playground/public"
              }
            ],
            "styles": [
              "projects/ssr-playground/src/styles.css"
            ],
            "server": "projects/ssr-playground/src/main.server.ts",
            "outputMode": "server",
            "ssr": {
              "entry": "projects/ssr-playground/src/server.ts"
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ssr-playground:build:production"
            },
            "development": {
              "buildTarget": "ssr-playground:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    },
    "app-playground": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/app-playground",
      "sourceRoot": "projects/app-playground/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/app-playground/src/main.ts",
            "tsConfig": "projects/app-playground/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/app-playground/public"
              }
            ],
            "styles": [
              "projects/app-playground/src/styles.css"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "app-playground:build:production"
            },
            "development": {
              "buildTarget": "app-playground:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}
