---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import { useStoryblokApi } from "@storyblok/astro";
import { richTextResolver, markdownToStoryblokRichtext } from "@storyblok/richtext";

const storyblokApi = useStoryblokApi();
const { data } = await storyblokApi.get("cdn/stories/home", {
  version: "draft",
});

import test from '/test.md?url&raw';

const markdownToStoryblokDoc = markdownToStoryblokRichtext(test);

console.log({ markdownToStoryblokDoc });

const renderedRichText = richTextResolver().render(data.story.content.richtext);

---

<Layout>
	<div set:html={renderedRichText} />
</Layout>
